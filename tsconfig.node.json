{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "composite": true, 
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", 
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "types": [
        "vite/client",
        "node",
        "vitest/globals" 
      ]
  },
  
  "include": [
      "vite.config.ts",
      "src/__tests__",     
      "src/setupTests.ts"
    ]
}