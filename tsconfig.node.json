{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"] 
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts", 
    "eslint.config.js",
    "playwright.config.ts", 
    "playwright-ct.config.ts"
  ]
}